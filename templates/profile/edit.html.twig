{# templates/profile/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0"><i class="bi bi-person-circle me-2"></i>Edit Profile</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.fullName) }}

                        <div class="mb-3">
                            <label class="form-label">Current Avatar</label>
                            <div class="mb-2">
                                {% if app.user.avatar %}
                                    <img src="/uploads/avatars/{{ app.user.avatar }}" 
                                         alt="Avatar" 
                                         class="img-thumbnail rounded-circle"
                                         width="80" height="80">
                                {% else %}
                                    <i class="bi bi-person-circle text-muted" style="font-size: 3rem;"></i>
                                {% endif %}
                            </div>
                            {{ form_row(form.avatarFile) }}
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                        <a href="{{ path('student_dashboard') }}" class="btn btn-link">Cancel</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}