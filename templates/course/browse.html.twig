{# templates/course/browse.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Explore Courses{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Explore Courses</h1>
        {% if is_granted('ROLE_INSTRUCTOR') %}
            <a href="#" class="btn btn-primary disabled">
                <i class="bi bi-plus-circle me-1"></i> Create Course
            </a>
        {% endif %}
    </div>

    {% if courses|length == 0 %}
        <div class="text-center py-5">
            <i class="bi bi-journal-x text-muted" style="font-size: 3rem;"></i>
            <h4>No courses available yet</h4>
        </div>
    {% else %}
        <div class="row g-4">
        {% for course in courses %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height:160px;">
                        <i class="bi bi-mortarboard text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <div class="card-body">
                        <span class="badge bg-success mb-2">Published</span>
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="text-muted small">{{ course.instructor }}</p>
                        <p class="card-text">{{ course.description|u.truncate(100, '…') }}</p>
                        <a href="#" class="btn btn-outline-primary">View Details →</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}